{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es2015",
        "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "types": ["jest", "node", "@types/testing-library__jest-dom"]
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": false
    },
    "exclude": ["node_modules", "src/build", "**.js", "dist"]
}
